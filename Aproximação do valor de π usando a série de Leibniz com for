#include <stdio.h>

int main() {
    int termos;
    double pi = 0.0;

    printf("Digite o número de termos para a aproximação de π: ");
    scanf("%d", &termos);

    for (int i = 0; i < termos; i++) {
        double termo = (i % 2 == 0 ? 1.0 : -1.0) / (2.0 * i + 1.0);
        pi += termo;
    }

    pi *= 4.0;
    printf("Aproximação de π com %d termos: %.15f\n", termos, pi);

    return 0;
}
