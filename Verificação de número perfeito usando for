#include <stdio.h>

int main() {
    int num, soma = 0;

    printf("Digite um número: ");
    scanf("%d", &num);

    for (int i = 1; i <= num / 2; i++) {
        if (num % i == 0) {
            soma += i;
        }
    }

    if (soma == num) {
        printf("%d é um número perfeito.\n", num);
    } else {
        printf("%d não é um número perfeito.\n", num);
    }

    return 0;
}
